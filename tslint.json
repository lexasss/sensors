{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],

    "typedef": false,
    "member-access": false,
    "one-line": ["check-open-brace", "check-whitespace"],
    "arrow-parens": false,
    "max-classes-per-file": false,
    "forin": false,
    "no-console": false,

    "variable-name": {
        "options": [
          "ban-keywords",
          "check-format",
          "allow-leading-underscore"
        ]
      }
  }
}
